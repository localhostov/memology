{
  "name": "memology-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "start": "vite",
    "build": "tsc && vite build",
    "lint": "eslint \"src/**/*.{js,mjs,cjs,ts,mts,jsx,tsx}\"",
    "preview": "vite preview",
    "lint:fix": "eslint \"src/**/*.{js,mjs,cjs,ts,mts,jsx,tsx}\" --fix",
    "proto": "npx protoc --ts_out src/shared/proto --ts_opt eslint_disable --proto_path protos error.proto user.proto meme.proto rating.proto comment.proto websocket.proto",
    "prepare": "husky install",
    "predeploy": "vite build",
    "deploy": "vk-miniapps-deploy"
  },
  "dependencies": {
    "@protobuf-ts/plugin": "^2.9.1",
    "@vkontakte/icons": "^2.80.0",
    "@vkontakte/vk-bridge": "^2.12.2",
    "@vkontakte/vk-bridge-react": "^1.0.1",
    "@vkontakte/vk-mini-apps-router": "^1.3.0",
    "@vkontakte/vk-miniapps-deploy": "^0.1.6",
    "@vkontakte/vkui": "^5.9.6",
    "effector": "^22.8.7",
    "effector-react": "^22.5.4",
    "patronum": "^1.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "wretch": "^2.7.1"
  },
  "devDependencies": {
    "@effector/redux-devtools-adapter": "^0.1.6",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.16",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.54.0",
    "eslint-kit": "^10.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "git update-index --again"
    }
  }
}
